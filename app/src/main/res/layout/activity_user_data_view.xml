<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDataView">

    <Button
        android:id="@+id/btn_buscar_usuario"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="67dp"
        android:text="Enviar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/input_id_buscar"
        android:layout_width="214dp"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:hint="Identificacion"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btn_buscar_usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tag_datos_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="17dp"
        android:text="Datos Usuario"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="@+id/btn_volver_dash1"
        app:layout_constraintTop_toBottomOf="@+id/btn_volver_dash1" />

    <TextView
        android:id="@+id/mostrar_id_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Identificacion"
        app:layout_constraintEnd_toEndOf="@+id/tag_datos_usuario"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/tag_datos_usuario"
        app:layout_constraintTop_toBottomOf="@+id/tag_datos_usuario" />

    <TextView
        android:id="@+id/mostrar_nombre_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:hint="Nombre"
        app:layout_constraintStart_toStartOf="@+id/mostrar_id_usuario"
        app:layout_constraintTop_toBottomOf="@+id/mostrar_id_usuario" />

    <TextView
        android:id="@+id/mostrar_apellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="25dp"
        android:hint="Apellido"
        app:layout_constraintBottom_toTopOf="@+id/mostrar_telefono"
        app:layout_constraintEnd_toEndOf="@+id/mostrar_telefono" />

    <TextView
        android:id="@+id/mostrar_telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="32dp"
        android:hint="Telefono"
        app:layout_constraintBottom_toTopOf="@+id/mostrar_correo"
        app:layout_constraintEnd_toEndOf="@+id/mostrar_contrasena" />

    <TextView
        android:id="@+id/mostrar_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="25dp"
        android:hint="Correo"
        app:layout_constraintBottom_toTopOf="@+id/mostrar_contrasena"
        app:layout_constraintEnd_toEndOf="@+id/mostrar_contrasena" />

    <TextView
        android:id="@+id/mostrar_contrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="113dp"
        android:hint="Contrasena"
        app:layout_constraintBottom_toTopOf="@+id/input_id_buscar"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_volver_dash1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        android:text="Volver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>